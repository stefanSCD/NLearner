@model NLearner.ViewModels.NoteEditViewModel

<div class="container mt-4">
    <form asp-controller="Note" asp-action="Save" asp-route-projectId="@Model.ProjectId" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />
        <input asp-for="ProjectId" type="hidden" />

        <div class="mb-3">
            <input asp-for="Title" class="form-control form-control-lg" placeholder="Note Title..." />
        </div>
        <div class="mb-3">
            <textarea asp-for="Content" class="form-control" rows="15" placeholder="Start writing..."></textarea>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save Note</button>
        </div>
     </form>

    <form asp-controller="Note" asp-action="Delete" asp-route-projectId="@Model.ProjectId" asp-route-id="@Model.Id" method="post">
         @Html.AntiForgeryToken()
         <button type="submit" class="btn btn-outline-danger">Delete</button>
    </form>
</div>
