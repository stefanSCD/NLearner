@using NLearner.Domain.Entities;
@using Microsoft.AspNetCore.Identity;

@inject SignInManager<User> signInManager;


<ul class="navbar-nav ms-auto">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form asp-controller="User" asp-action="Logout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button class="nav-link btn btn-link text-dark" style="border:none; background:none;" type="submit">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
        </li>
    }
</ul>

